{
  "rules": {
    "users": {
      ".read": "auth !== null",
      ".indexOn": [
        "filter",
        "updatedAt"
      ],
      "$userId": {
        ".write": "auth !== null && auth.uid === $userId"
      }
    },
    "pairs": {
      "$pairId": {
        ".read": "auth !== null && $pairId.contains(auth.uid)",
        ".write": "auth !== null && $pairId.contains(auth.uid)"
      }
    },
    "chats": {
      "$userId": {
        ".read": "auth !== null && auth.uid === $userId",
        ".write": "auth !== null && auth.uid === $userId"
      }
    },
    "rooms": {
      ".read": "auth !== null",
      ".indexOn": [
        "filter",
        "closedAt"
      ],
      "$roomId": {
        ".write": "auth !== null && auth.uid === newData.child('userId').val()"
      }
    },
    "messages": {
      "$roomId": {
        ".read": "auth !== null",
        ".indexOn": [
          "createdAt"
        ],
        "$messageId": {
          ".write": "auth !== null && auth.uid === newData.child('userId').val()",
          ".validate": "newData.hasChild('content')",
          "content": {
            ".validate": "newData.isString() && newData.val().length <= 1024"
          }
        }
      }
    },
    "accesses": {
      "$accessId": {
        ".write": "auth !== null"
      }
    },
    "expires": {
      "$expireId": {
        ".write": "auth !== null"
      }
    }
  }
}
